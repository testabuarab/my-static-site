{% extends "fields/_field" %}

{% block content %}
    {% set viewMode = options.getViewMode() %}
    {% for index, category in value %}
        {% include "_includes/card" with {
            viewMode: viewMode,
            headerDisplaysUids: options['disposition']['header'] ?? [],
            footerDisplaysUids: options['disposition']['footer'] ?? [],
            contentDisplaysUids: options['disposition']['content'] ?? [],
            element: category
        } only %}
    {% endfor %}
{% endblock %}